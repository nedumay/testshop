<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style text Sign in Activity Sign in-->
    <style name="text_sign_in">
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <!-- Style Button-->
    <style name="style_button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style Button Upload-->
    <style name="style_button_upload" parent="style_button">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="icon">@drawable/upload_ic</item>
        <item name="iconGravity">textStart</item>
    </style>


    <!-- Style input layout-->
    <style name="text_input_layout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="boxBackgroundColor">@color/background_card_view</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <!-- Style input layout password-->
    <style name="text_input_layout_password" parent="text_input_layout">
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint">@color/icon_tint</item>
    </style>

    <!-- Style input edit text-->
    <style name="input_edit_text" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">11sp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:gravity">fill</item>
    </style>

    <!-- Style input edit text password-->
    <style name="input_edit_text_password" parent="input_edit_text">
        <item name="android:inputType">textPassword</item>
    </style>

    <!-- Style input edit text email-->
    <style name="input_edit_text_email" parent="input_edit_text">
        <item name="android:inputType">textEmailSubject</item>
    </style>

    <!-- Style text already_have_an_account-->
    <style name="already_text">
        <item name="android:textColor">@color/text_color_signature</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Style text log in-->
    <style name="log_in_text">
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Style text sign in with -->
    <style name="sign_in_with">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Style text profile item -->
    <style name="text_item_profile" parent="sign_in_with">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Style bottom navigation bar -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSecondaryContainer">#EEEFF4</item>
    </style>

    <!-- Style text title AppBar-->
    <style name="title_app_bar">
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style text Location-->
    <style name="location_app_bar">
        <item name="android:textColor">@color/text_color_signature</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Style text title recyclerView-->
    <style name="title_recycler_view">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Style text view all-->
    <style name="text_view_all">
        <item name="android:textColor">@color/text_color_signature</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">9sp</item>
    </style>

    <!-- Style text title profile-->
    <style name="text_title_profile">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Style text change photo-->
    <style name="text_change_photo">
        <item name="android:textColor">@color/text_color_signature</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">8sp</item>
    </style>

    <!-- Style text name profile-->
    <style name="text_name_profile">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>